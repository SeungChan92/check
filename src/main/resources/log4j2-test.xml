<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<CustomLevels>
		<CustomLevel name="BOUND" intLevel="150" />
	</CustomLevels>
	
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss} %5p : %m%n" />
		</Console>
		<!-- <File name="File" fileName="logs/log.log" append="true"> <PatternLayout 
			pattern="%d %5p [%c] %m%n" /> </File> -->
		<RollingFile name="dailyRollingFile" fileName="logs/result.log"
			filePattern="logs/result.log.%d{yyyy-MM-dd}" append="true">

			<PatternLayout pattern="%d{HH:mm:ss} %5p : %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<!-- <SizeBasedTriggeringPolicy size="1 KB" /> -->
			</Policies>
		</RollingFile>
		<RollingFile name="dailyRollingFile_error" fileName="logs/result_error.log"
			filePattern="logs/result_error.log.%d{yyyy-MM-dd}" append="true">

			<PatternLayout pattern="%d{HH:mm:ss} %5p : %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<!-- <SizeBasedTriggeringPolicy size="1 KB" /> -->
			</Policies>
		</RollingFile>
		<RollingFile name="NewLine" fileName="logs/result.log"
			filePattern="logs/result.log.%d{yyyy-MM-dd}" append="true">

			<PatternLayout pattern="%n%n%n" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<!-- <SizeBasedTriggeringPolicy size="1 KB" /> -->
			</Policies>
		</RollingFile>
		<RollingFile name="NewLine_error" fileName="logs/result_error.log"
			filePattern="logs/result_error.log.%d{yyyy-MM-dd}" append="true">

			<PatternLayout pattern="%n%n%n" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<!-- <SizeBasedTriggeringPolicy size="1 KB" /> -->
			</Policies>
		</RollingFile>
	</Appenders>
	
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="dailyRollingFile" />
			<AppenderRef ref="Console" />
		</Root>
		<Logger name="LevelLog" level="error">
			<AppenderRef ref="dailyRollingFile_error" />
		</Logger>
		<Logger name="NewLine" level="BOUND" additivity="false">
			<AppenderRef ref="NewLine" />
			<AppenderRef ref="NewLine_error" />
		</Logger>
	</Loggers>
</Configuration>